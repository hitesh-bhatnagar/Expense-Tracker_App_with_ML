<Window x:Class="ExpenseTracker.Views.ExpenseFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Expense Form" Height="300" Width="400" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e2f" Foreground="White"
        AllowsTransparency="True" WindowStyle="None" Opacity="0">

    <Border CornerRadius="10" Background="#2a2a3d" Padding="20" >
        <StackPanel>
            <TextBlock Text="Description" Margin="0,0,0,5"/>
            <TextBox
                Text="{Binding CurrentExpense.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,10"/>

            <TextBlock Text="Amount" Margin="0,0,0,5"/>
            <TextBox
                Text="{Binding CurrentExpense.Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,10"/>

            <TextBlock Text="Date" Margin="0,0,0,5"/>
            <DatePicker
                SelectedDate="{Binding CurrentExpense.Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Use Click handler (calls Save_Click in code-behind) -->
                <Button Content="Save" Width="80" Margin="5" Click="Save_Click"/>
                <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
